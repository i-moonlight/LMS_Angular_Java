
server:
  port: 8083
spring:
  application:
    name: ula-faculty-service
  datasource:
    url: jdbc:mysql://localhost:3306/ula_faculty?transformedBitIsBoolean=true
    username: username
    password: password
  flyway:
    enabled: true
  jpa:
    hibernate:
      ddl-auto: validate
  properties:
    hibernate:
      jdbc:
        lob:
          non_contextual_creation: true
      dialect: org.hibernate.dialect.MySQL5InnoDBDialect

  jackson:
    mapper:
      default-view-inclusion: true
